@model string 
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Admin Centrale</title>
        <!-- Use bootstrap stylesheet -->
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    </head>
    <body>
        <header class="text-center m-2">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                <h1 class="display-4">The Breadpit</h1>
            </a>
        </header>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <h3 class="text-center">Welcome @Model</h3>
                    <p class="text-center">
                        Below you will find the various options you can use as admin.
                    </p><br />

                    <!-- Button to logout -->
                    <div class="text-center">
                        <a class="btn btn-primary btn-lg" role="button" asp-action="Logout">Logout</a>
                    </div><br />

                    <!-- Button to the AdminManageUser pagina -->
                    <div class="text-center">
                        <a class="btn btn-primary btn-lg" role="button" asp-action="Manager">TEMPORARY MANAGER BUTTON</a>
                    </div><br />

                    <!-- Button to the AdminUpdateOrder pagina -->
                    <div class="text-center">
                        <a class="btn btn-primary btn-lg" role="button" asp-action="AdminUpdateOrder">Update Orders</a>
                    </div><br />
                    <!-- Button to the AdminUpdatePrice pagina -->
                    <div class="text-center">
                        <a class="btn btn-primary btn-lg" role="button" asp-action="AdminUpdateProduct">Update products</a>
                    </div><br />
                    <!-- Button to the AdminManageUser pagina -->
                    <div class="text-center">
                        <a class="btn btn-primary btn-lg" role="button" asp-action="AdminManageUser">Manage Users</a>
                    </div><br />

                    <!-- Button to the ManageOrders pagina -->
                    <div class="text-center">
                        <a class="btn btn-primary btn-lg" role="button" asp-action="ManageOrders">Orders from all users</a>
                    </div><br />

                    <!-- Button to the UserOrder pagina -->
                    <div class="text-center">
                        <a class="btn btn-primary btn-lg" role="button" asp-action="UserOrder">Order from our menu</a>
                    </div><br />
                    <!-- Button to the UserViewOrder pagina -->
                    <div class="text-center">
                        <a class="btn btn-primary btn-lg" role="button" asp-action="UserViewOrder">View you're orders'</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Future stuff -->

    </body>
</html>